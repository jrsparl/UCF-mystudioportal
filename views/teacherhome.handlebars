<div class="profile-home p-4">
  {{#if user.teacher.id}}

  <h1 class="white-text">
    Welcome back!
  </h1>
  <div class="row sm">
    <div class="col-md-3">
      <div class="card bg-primary text-dark" style="width: 18rem;">
        <div class="card-body">
          <h4 class="card-text"> {{user.first_name}} {{user.last_name}} </h4>
        </div>
        {{#if user.teacher.profile_pic}}
        <img src="{{user.teacher.profile_pic}}" class="card-img-top" alt="profile picture">
        {{else}}
        <img src="../images/empty-profilepic.png" class="card-img-top" alt="profile picture">
        {{/if}}
        <ul class="list-group list-group-flush">
          <div class="list-group-item bg-primary">
            <h5 class="card-text" id="teacher-id-detail">Teacher ID: {{user.teacher.id}}</h5>
            <h5>Genre: {{user.teacher.coaching_genre}}</h5>
            </br>
            {{!-- <div class="card-body"> --}}
              <div class="row">
              <a class="card-link btn btn-primary w-50" href="/teacherhome/teacherprofile">View Profile</a>
              <button type="button" id="get-students" class="btn btn-secondary w-50">View Class</button>
              <a class="card-link btn btn-danger w-100 mt-1" href="/teacherhome/addsong">Add Song</a>
              </div>
              {{!--
            </div> --}}
          </div>
        </ul>
      </div>
    </div>



    <div class="col-md-8">
      <div class="row" id="student-card-holder">

      </div>
    </div>
  </div>
</div>





{{else}}
<div class="white-text">
  <h3>Please create your profile to get started!</h3>
  <div class="row">
    <div class="col-3">
      <div class="card bg-primary text-light" style="width: 18rem;">
        <div class="card-body">
          <h4 class="card-text"> {{user.first_name}} {{user.last_name}} </h4>
        </div>
        <img src="../images/empty-profilepic.png" class="card-img-top" alt="profile picture">
        <ul class="list-group list-group-flush">
          <li class="list-group-item bg-primary">

            <a class="card-link btn btn-light" href="/teacherhome/createteacherprofile">Create My Profile!</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>
{{/if}}



<script src="/javascript/getmystudents.js"></script>
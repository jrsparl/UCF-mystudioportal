<h1>
  Hi {{user.first_name}} {{user.last_name}} good to see you today!
</h1>
{{#if user.teacher.id}}

<div class="row">
  <div class="col-3">
    <div class="card" style="width: 18rem;">
      <h4 class="card-title">Teacher Profile</h4>
      <img src="" class="card-img-top" alt="Test image">
      <div class="card-body">
        <h5 class="card-text">{{user.first_name}} {{user.last_name}} </h5>
      </div>
      <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">

        <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab"
          aria-controls="v-pills-profile" aria-selected="false">Profile</a>

        {{!-- <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab"
          aria-controls="v-pills-messages" aria-selected="false">Messages</a> --}}

        <a class="nav-link" id="v-pills-settings-tab" href="/teacherhome/editteacherprofile" role="tab"
          aria-controls="v-pills-settings" aria-selected="false">Edit Profile</a>
      </div>
    </div>
    <div class="col-9">
      <div class="tab-content" id="v-pills-tabContent">
        <div id="v-pills-profile" role="tabpanel" class="tab-pane fade">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Birthday: {{format_date user.teacher.birthday}}</li>
            <li class="list-group-item">coaching genre: {{user.teacher.coaching_genre}}</li>
            <li class="list-group-item">coaching level: {{user.teacher.coaching_level}}</li>
          </ul>
        </div>
        {{!-- <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">... --}}
      </div>
    </div>
  </div>
</div>


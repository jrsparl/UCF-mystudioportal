<div class="profile-home p-4">
  {{#if user.student.id}}
  <h1 class="white-text">
    Welcome back!
  </h1>
  <div class="row">
    <div class="col-3">
      <div class="card bg-primary text-dark" style="width: 18rem;">
        <div class="card-body">
          <h4 class="card-text"> {{user.first_name}} {{user.last_name}} </h4>
        </div>

        {{#if user.student.profile_pic}}
        <img src="{{user.student.profile_pic}}" class="card-img-top" alt="profile picture">
        {{else}}
        <img src="../images/empty-profilepic.png" class="card-img-top" alt="profile picture">
        {{/if}}

        <ul class="list-group list-group-flush">
          <div class="list-group-item bg-primary">
            <h5 id="student-id-detail">Student ID: {{user.student.id}}</h5>
            <h5>Teacher ID: {{user.student.teacher_id}}</h5>
            <h5>Teacher: {{user.student.teacher.user.first_name}} {{user.student.teacher.user.last_name}} 
            {{!-- <img src="{{user.student.teacher.profile_pic}}" class="card-img-top img-thumbnail w-25" alt="profile picture"> --}}
            </h5>
          <a class="card-link btn btn-dark text-dark w-50" href="/studenthome/studentprofile">View Profile</a>
          
          {{!-- <button type="button" id="get-students" class="white-text btn btn-dark">View Class</button> --}}
          <br>
        </ul>
      </div>
    </div>

    <div class="col-12 col-lg-5 rounded-lg">
      <iframe class="col-12 rounded-lg"
        src="https://tokbox.com/embed/embed/ot-embed.js?embedId=8325314b-c95e-494e-a489-185f9c40ba59&room={{user.student.room_number}}&iframe=true"
        width="500px" height="400px" scrolling="no" allow="microphone; camera" frameborder="0   ">
      </iframe>
      <form class="comment-form col-12">

        <div>


          <button type="button" class="btn btn-secondary btn-lg m-1" id="view-comments">View Comments</button>



        </div>
      </form>

    </div>
    <div class="col-4" id="comment-holder">
      {{!-- <div class="card">
        <div class="card-body bg-secondary text-light">
          <ul class="list-group list-group-flush">
            <li class="list-group-item bg-secondary">
              <p>Created: Created Date</p>
            </li>
            <li class="list-group-item bg-secondary">
              <p>Teacher: Teacher Name</p>
            </li>
            <li class="list-group-item bg-secondary">
              <p>Comment: a pluribus unum umbrella</p>
            </li>
          </ul>
        </div>
      </div> --}}
    </div>




  </div>
  <figure>
           <figcaption>Listen to the Exercise:</figcaption>
           <audio
           controls
           src="https://res.cloudinary.com/my-studio-portal/video/upload/v1609452236/repertoire/vmbbwo322zo4oloiufjc.mp3">
           Your browser does not support the
            <code>audio</code> element.
        </audio>
       </figure>
</div>




{{else}}
<div class="white-text">
  <h3>Please create your profile to get started!</h3>
  <div class="row">
    <div class="col-3">
      <div class="card bg-primary text-light" style="width: 18rem;">
        <div class="card-body">
          <h4 class="card-text"> {{user.first_name}} {{user.last_name}} </h4>
        </div>
        <img src="../images/empty-profilepic.png" class="card-img-top" alt="profile picture">
        <ul class="list-group list-group-flush">
          <li class="list-group-item bg-primary">
            <a class="card-link btn btn-light" href="/studenthome/createstudentprofile">Create My Profile!</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>
{{/if}}



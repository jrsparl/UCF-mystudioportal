<form class="profile-home p-4 white-text user_entry-form">
    <div class="form-group row">
        <label for="company-info" class="col-sm-2 col-form-label">Company name: </label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext white-text" id="company-info"
                value="{{user.company.company_name}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="company-info" class="col-sm-2 col-form-label">Company ID: </label>
        <div class="col-sm-10">
            <p readonly id="company_id-entry" class="form-control-plaintext white-text">{{user.company.id}}</p>
        </div>
    </div>
    <div class="form-group row">
        <label for="username-entry" class="col-sm-2 col-form-label">Username:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control w-50 p-3" id="username-entry">
        </div>
    </div>
    <div class="form-group row">
        <label for="email-entry" class="col-sm-2 col-form-label">E-mail:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control w-50 p-3" id="email-entry">
        </div>
    </div>
    <div class="form-group row">
        <label for="first_name-entry" class="col-sm-2 col-form-label">First name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control w-50 p-3" id="first_name-entry">
        </div>
    </div>
    <div class="form-group row">
        <label for="last_name-entry" class="col-sm-2 col-form-label">Last name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control w-50 p-3" id="last_name-entry">
        </div>
    </div>
    <div class="form-group row">
        <label for="password-entry" class="col-sm-2 col-form-label">Temporary Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control w-50 p-3" id="password-entry">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Role:</label>
        <div class="col-sm-10">
            <select class="form-control w-50" id="role-entry" required>
                <option disabled>Choose role</option>
                <option value="teacher">Teacher</option>
                <option value="student">Student</option>
            </select>
        </div>

        {{!-- <div class="col-sm-10">
            <input type="text" class="form-control" id="role-entry">
        </div> --}}

    </div>
    <div class="form-group row">
        {{!-- <label for="grade_level-edit" class="col-sm-2 col-form-label">Grade Level:</label> --}}
        <div class="col-sm-10">
            {{!-- <input type="text" class="form-control" id="grade_level-edit" value="{{user.student.grade_level}}"> --}}
            <br>
            <button type="submit" class="btn btn-primary user_entry-form">Submit</button>
            <a type="button" href="../" class="btn btn-primary">back</A>
            <br>
        </div>
    </div>
</form>






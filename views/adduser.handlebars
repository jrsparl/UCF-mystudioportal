<br>
<div class="card">
    <div class="card-header" id="company-info">
        {{user.company.company_name}}
    </div>
    <div class="card-body user_entry-form">
        <form>
            <div class="form-group hidden">
               <label for="username-entry">Company ID</label>
                <p id="company_id-entry">{{user.company.id}}</p>
            </div>
            <div class="form-group">
                <label for="username-entry">Username</label>
                <input type="text" class="form-control" id="username-entry">
            </div>
            <div class="form-group">
                <label for="email-entry">Email address</label>
                <input type="email" class="form-control" id="email-entry" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label for="password-entry">Temporary Password</label>
                <input type="password" class="form-control" id="password-entry">
            </div>
            <div class="form-group">
                <label for="role-entry">Role</label>
                <input type="text" class="form-control" id="role-entry">
            </div>
            <div class="form-group">
                <label for="first_name-entry">First Name</label>
                <input type="text" class="form-control" id="first_name-entry">
            </div>
            <div class="form-group">
                <label for="last_name-entry">Last Name</label>
                <input type="text" class="form-control" id="last_name-entry">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button><br>
        </form>
    </div>
</div>
<br>



<script src="/javascript/adduser.js"></script>
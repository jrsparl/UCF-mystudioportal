<div class="card profile-home p-4 white-text">
    <div class="card-header" id="company-info">
        <label>
            <h5>Company: </h5>
        </label>
        <span>{{user.company.company_name}}</span>
    </div>
    <div class="card-body">
        <form>
            <div class="form-group hidden">
                <label>Student ID: </label>
                <span>{{user.student.id}}</span>
            </div>

            <div class="form-group">
                <label for="first_last_name-display">
                    <h5>Username: </h5>
                </label>
                <span id="first_last_name-display">{{user.username}}</span>
            </div>

            <div class="form-group">
                <label for="first_last_name-display">
                    <h5>Name: </h5>
                </label>
                <span id="first_last_name-display">{{user.first_name}} {{user.last_name}}</span>
            </div>
            <div class="form-group">
                <label for="birthday-id">
                    <h5>Teache ID: </h5>
                </label>
                <span id="birthday-id">{{user.student.teacher_id}}</span>
            </div>
            <div class="form-group">
                <label for="birthday-id">
                    <h5>Birthday: </h5>
                </label>
                <span id="birthday-id">{{format_date user.student.birthday}}</span>
            </div>
            <div class="form-group">
                <label for="genre-display">
                    <h5>vocal part: </h5>
                </label>
                <span id="genre-display">{{user.student.vocal_part_name}}</span>
            </div>
            <div class="form-group">
                <label for="level-display">
                    <h5>vocal style: </h5>
                </label>
                <span id="level-display">{{user.student.vocal_style}}</span>
            </div>
            <div class="form-group">
                <label for="level-display">
                    <h5>grade_level: </h5>
                </label>
                <span id="level-display">{{user.student.grade_level}}</span>
            </div>
            <div class="form-group">
                <label for="level-display">
                    <h5>vocal style: </h5>
                </label>
                <span id="level-display">{{user.student.vocal_style}}</span>
            </div>
            <div class="form-group">
                <a class="btn btn-light" href="/studenthome/editstudentprofile">Edit Profile</a>
            </div>
        </form>
    </div>
</div>
<br>